<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pangge.opencvjni.MainActivity">

    <Button
        android:id="@+id/btn_gray_process"
        android:layout_width="90dp"
        android:layout_height="51dp"
        android:text="@string/str_proc"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/str_proc"
        android:layout_marginTop="50dp"

        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_canny_process"
        android:layout_width="80dp"
        android:layout_height="47dp"
        android:text="@string/str_canny"
        app:layout_constraintLeft_toRightOf="@+id/btn_gray_process"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_epf_process"
        android:layout_width="62dp"
        android:layout_height="41dp"
        android:text="@string/str_epf"
        app:layout_constraintLeft_toRightOf="@+id/btn_canny_process"
        android:layout_marginLeft="18dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_cartoon_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_cartoon"
        app:layout_constraintLeft_toRightOf="@+id/btn_epf_process"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="84dp"
        android:layout_height="40dp"
        android:text="@string/exit"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_gray_process"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
